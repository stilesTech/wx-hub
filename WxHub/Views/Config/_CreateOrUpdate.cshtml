@model Entities.Config
<div class="row">
    <div class="col-sm-9 col-md-9 edit-left">
        <div class="input-group">
            <span class="input-group-addon">
                @Html.DisplayNameFor(model => model.ConfigKey)
            </span>
            @Html.EditorFor(model => model.ConfigKey, new { htmlAttributes = new { @class = "form-control", placeholder = "输入配置Key" } })
        </div>
        @Html.ValidationMessageFor(model => model.ConfigKey, "", new { @class = "text-danger" })
        <div class="clear"></div>
        @Html.TextAreaFor(model => model.ConfigValue, new { style = "width:100%;height:200px;" })
        @Html.ValidationMessageFor(model => model.ConfigValue, "", new { @class = "text-danger" })
        <div class="text-center">
            <div class="clear"></div>
            @*<button type="reset" class="btn btn-primary" style="width: 10%">重置</button>*@
            <button type="submit" class="btn btn-primary" style="width: 10%">提交</button>
        </div>
    </div>
</div>